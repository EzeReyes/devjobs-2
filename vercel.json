{
    "version": 2,
    "builds": [
      {
        "src": "index.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/dist/bundle.js",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "index.js"
      },
      {"src": "/uploads/(.*)",
      "dest": "/public/uploads/$1"
      },
      {
        "rewrites": [
          { "source": "/api/(.*)", "destination": "/routes/index.js" }
        ]
      }
    ]
  }
  